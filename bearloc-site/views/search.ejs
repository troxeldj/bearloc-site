<%- include ('./partials/head_search.ejs') %>
<%- include ('./partials/nav') %>

<h1>Listings Matching Parameters (<%=templateListings.length%>)</h1>
<h3>Average Price: $<%=(avgPrice/templateListings.length).toFixed(2)%> </h3>
<% for(let i=0; i < templateListings.length; i++) { %>
    <% if(i % 3 === 0) { %>
        <div class="row">
    <% } %>
      <div class="col-4 search_listing">
        <div class="listing_information">
          <p><%=templateListings[i].ADDRESSONE%></p>
        <% if(templateListings[i].ADDRESSTWO != null) { %>
              <p><%= templateListings[i].ADDRESSTWO %></p>
          <% } %>
          <p><%= templateListings[i].CITY %></p>
          <p><%= templateListings[i].ZIPCODE %></p>
          <br>
          <p>Price: $<%= templateListings[i].PRICE %></p>
        </div>
          <iframe src="<%= buildMapURL(google_maps_key, `${templateListings[i].ADDRESSONE} ${templateListings[i].CITY}`)%>" allowfullscreen frameborder="0" style="border:0"></iframe>
      </div>
    <% if((i+1) % 3 === 0){ %>
          </div>
    <% } %>
  <% } %>
<%- include ('./partials/end_head_search') %>
