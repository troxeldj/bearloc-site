<%- include ('./partials/head_search.ejs') %>
<%- include ('./partials/nav') %>

<h1>Listings Matching Parameters</h1>
<h3 class="avgPrice">Avg Price: $<%= (avgPrice / templateListings.length).toFixed(2); %></h3>
<% for(let i=0; i < templateListings.length; i++) { %>
    <% if(i % 3 === 0) { %>
        <div class="row">
    <% } %>
      <div class="col search_listing">
        <p><%=templateListings[i].ADDRESSONE%></p>
        <% if(templateListings[i].ADDRESSTWO != null) { %>
              <p>Address2: <p%= templateListings[i].ADDRESSTWO %></p>
          <% } %>
          <p><%= templateListings[i].CITY %></p>
          <p><%= templateListings[i].ZIPCODE %></p>
          <br>
          <p>Price: $<%= templateListings[i].PRICE %></p>
      </div>
    <% if((i+1) % 3 === 0){ %>
          </div>
    <% } %>
  <% } %>

<%- include ('./partials/end_head') %>
